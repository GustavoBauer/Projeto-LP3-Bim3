@model IEnumerable<ProjetoLP3.Models.CategoriaProduto>

@{
    ViewBag.Title = "Categoria de Produto";
}

<h2>Categorias de produto</h2>

<p>
    @Html.ActionLink("Criar novo", "Inserir", null, new { @class = "btn btn-primary" })
</p>
<div style="overflow-x:auto; margin-bottom:20px;">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoComercio.Nome)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoComercio.Nome)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.IdCategoriaProduto }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdCategoriaProduto }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.IdCategoriaProduto }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>