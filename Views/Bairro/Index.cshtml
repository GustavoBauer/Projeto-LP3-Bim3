@model IEnumerable<ProjetoLP3.Models.Bairro>

@{
    ViewBag.Title = "Bairro";
}

<h2>Bairros</h2>

<p>
    @Html.ActionLink("Criar novo", "Inserir", null, new { @class = "btn btn-primary" })
</p>
<div style="overflow-x:auto; margin-bottom:20px;">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.IdBairro }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdBairro }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.IdBairro }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>