@model IEnumerable<ProjetoLP3.Models.Loja>

@{
    ViewBag.Title = "Loja";
}

<h2>Lojas</h2>

<p>
    @Html.ActionLink("Criar novo", "Inserir", null, new { @class = "btn btn-primary" })
</p>
<div style="overflow-x:auto; margin-bottom:20px;">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeComercial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rua.Nome)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeComercial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Site)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rua.Nome)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.IdLoja }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdLoja }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.IdLoja }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>